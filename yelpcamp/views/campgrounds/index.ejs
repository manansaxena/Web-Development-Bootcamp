<% layout('layouts/boilerplate') %> 

<div class="row mb-3 d-flex flex-row">
    <div class="col-md-8">
        <h1>All Campgrounds</h1>
    </div>
    <div class="col-md-4 d-flex justify-content-end py-1">
        <button type="button" class="btn btn-success d-inline" onclick="location.href='/campgrounds/new'">Add New Campground</button>
    </div>
</div>


<% for( let camp of camps) { %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <img src="<%=camp.images[0].url%>" alt="" class="img-fluid">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= camp.title %> </h5>
                    <p class="card-text"><%= camp.description %> </p>
                    <p class="card-text">
                        <small class="text-muted">
                            <%= camp.location %> 
                        </small>
                    </p>
                    <a href="/campgrounds/<%= camp._id %>  " class="btn btn-dark">Details</a>
                </div>
            </div>
        </div>
    </div>        
<% } %>

