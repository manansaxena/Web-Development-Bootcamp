<% layout('layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <!-- <div class="col-6 offset-3 d-flex flex-column"> -->
        <div class="col-12 col-md-6 offset-md-3 d-flex flex-column">
        <form action="/campgrounds/<%= camp._id %>?_method=PUT " method="POST"  class="needs-validation" novalidate>
            <div class="mb-3">
                <label class="form-label" for="title">Enter the title</label>
                <input class="form-control" type="text" name="campground[title]" id="title" value="<%= camp.title %>" required>
                <div class="valid-feedback">
                    Looks Good
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Enter the location</label>
                <input class="form-control" type="text" name="campground[location]" id="location" value="<%= camp.location %>" required>
                <div class="valid-feedback">
                    Looks Good
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="number" class="form-control" placeholder="0.0" id="price" name="campground[price]" aria-label="price" aria-describedby="price-label" value="<%= camp.price %>" required>
                </div>
                <div class="valid-feedback">
                    Looks Good
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Upload Image</label>
                <input class="form-control" type="text" name="campground[image]" id="image" value="<%= camp.image %>" required>
                <div class="valid-feedback">
                    Looks Good
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="Description">Description</label>
                <textarea class="form-control" type="text" name="campground[Description]" id="Description" required><%= camp.description%></textarea>
                <div class="valid-feedback">
                    Looks Good
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-warning mt-1">Update Campground</button>
            </div>
        </form>
        <div class="col-1 offset-11 mb-2">
            <button class="btn btn-dark" type="button" onclick="location.href='/campgrounds/<%= camp._id %>'">Back</button>
        </div>
    </div>
</div>
